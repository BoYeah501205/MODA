{
  "name": "MODA - Modular Operations Dashboard Application",
  "short_name": "MODA",
  "description": "Optimized modular operations dashboard for construction and manufacturing",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#F0F2F5",
  "theme_color": "#1E3A5F",
  "orientation": "portrait-primary",
  "categories": ["productivity", "business", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  "scope": "/",
  "icons": [
    {
      "src": "/public/autovol-logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/public/autovol-logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/public/autovol-logo.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "MODA Dashboard - Desktop View"
    },
    {
      "src": "/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "MODA Dashboard - Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "Production Dashboard",
      "short_name": "Production",
      "description": "View production modules and progress",
      "url": "/?tab=production",
      "icons": [
        {
          "src": "/icon-production.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Projects",
      "short_name": "Projects",
      "description": "Manage projects and modules",
      "url": "/?tab=projects",
      "icons": [
        {
          "src": "/icon-projects.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Equipment",
      "short_name": "Equipment",
      "description": "Track equipment and inventory",
      "url": "/?tab=equipment",
      "icons": [
        {
          "src": "/icon-equipment.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".xlsx", ".csv"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+moda",
      "url": "/?protocol=%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  }
}
